        {
          "name": "200 - Добавить комментарий",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Ответ должен содержать код статуса 201 и данные в формате json\", function () {\r",
                  "    pm.response.to.have.status(201);  \r",
                  "    pm.response.to.be.withBody;\r",
                  "    pm.response.to.be.json;\r",
                  "});\r",
                  "\r",
                  "const source = JSON.parse(pm.request.body.raw);\r",
                  "const target = pm.response.json();\r",
                  "var query = {};\r",
                  "pm.request.url.query.all().forEach((param) => { query[param.key] = param.value});\r",
                  "var params = pm.request.url.path[1];\r",
                  "\r",
                  "pm.test(\"Событие должно содержать поля: id, text, eventId, userId, created, responses\", function () {\r",
                  "pm.expect(target).to.have.property('id');\r",
                  "pm.expect(target).to.have.property('text');\r",
                  "pm.expect(target).to.have.property('eventId');\r",
                  "pm.expect(target).to.have.property('userId');\r",
                  "pm.expect(target).to.have.property('created');\r",
                  "pm.expect(target).to.have.property('responses');\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Данные в ответе должны соответствовать данным в запросе\", function () {\r",
                  "    pm.expect(target.id).to.not.be.null;\r",
                  "    pm.expect(target.text).equal(source.text, 'Текст комментария должно соответствовать тексту комментария в запросе');\r",
                  "    pm.expect(target.eventId.toString()).equal(query['eventId'], 'Id события должно соответствовать id события в запросе');\r",
                  "    pm.expect(target.userId.toString()).equal(params, 'Id пользователя должно соответствовать id пользователя в запросе');\r",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
